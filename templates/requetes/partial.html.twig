{% block buttonGeneric %}
    <div class="row">
        <div class="col-12 table-buttons">
            <button class="btn btn-info" type="button" data-toggle="modal" data-target="#exampleModal" >{{ 'generic.save' |trans }}</button>
            {#Bouton pour sauvegarder la requête #}
            <button class="btn btn-success" type="button" onclick="executerRequete()">
                {{ 'generic.search' |trans }}
            </button>
            {#Bouton pour lancer la requête #}
            <br/>
            <br/>
        </div>
    </div>
{% endblock %}

{% block buttonAndOr %}
    <div class="btn-group btn-group-toggle" data-toggle="buttons">
        <label class="btn btn-secondary active">
            <input autocomplete="off" checked id="option1" name="options" type="radio">
            {{ 'requetes.et' |trans }}
        </label>
        <label class="btn btn-secondary">
            <input autocomplete="off" id="option2" name="options" type="radio">
            {{ 'requetes.ou' |trans }}
        </label>
    </div>
{% endblock %}
