{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}{{'login_page.login_required'|trans}}{% endblock %}

{% block bodyclass %}login-page{% endblock %}
{% block body %}
    <div class="container">
        <div class="row justify-content-center" style="margin-top: 100px">
            <div class="col-6 text-center">
                <img src="{{ asset('build/images/logo-ercmap.png') }}" class="w-100" />
            </div>
        </div>
        <div class="row justify-content-center mt-4">
            <div class="col-6">
                <h2 class="text-center">{{'login_page.access_database'|trans}}</h2>
            </div>
        </div>
        <div class="row justify-content-center mt-4">
            <div class="col-6">
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                {{ form_start(form, {'action': path('login_check'), 'method': 'POST'}) }}
                    {{ form_widget(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
